{
  "manifest_version": 3,
  "name": "BreakItDown",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/main.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "contextMenus", 
    "activeTab", 
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
